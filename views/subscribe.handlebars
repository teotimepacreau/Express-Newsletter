<div class="container">
    <section class="subscribe-left">
        <h1>The <span>Newsletter</span> of JJJJound</h1>
    </section>
    <section class="subrisribe-right">
        <form id="myForm" method="post" action="/subscribe">
            <div class="lastname">
                <label for="lastname">Lastname</label>
                <input autocomplete="on" type="text" id="form-lastname" name="lastname" required>
            </div>
            <div class="firstname">
                <label for="firstname">Firstname</label>
                <input autocomplete="on" type="text" id="form-firstname" name="firstname" required>
            </div>
            <div class="email">
                <label for="email">E-mail</label>
                <input type="email" id="form-email" name="email" required>
            </div>
            <button type="submit" id="submit-btn"><p>Join</p><span>Newsletter</span></button>
        </form>
    </section>
</div>

